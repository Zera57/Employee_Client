<Window x:Class="CS2._5.EditDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS2._5"
        mc:Ignorable="d"
        Title="AddDepartment" Height="235" MinHeight="235" MaxHeight="235" Width="380" MinWidth="380" MaxWidth="380">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Type name of Department that you you want to add." Width="300" Margin="0, 5"/>
            <TextBox x:Name="txtBox_Name" Text="Name Department" Margin="50, 10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="30, 10"></Setter>
                    </Style>
                </Grid.Resources>
                <Button Grid.Column="0" Content="Add" Click="ButtonAdd_Click" FontSize="14"/>
                <Button Grid.Column="1" Content="Cancel" Click="ButtonCancel_Click" FontSize="14"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
